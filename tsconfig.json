{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "es2016",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "@types/node",
      "vite/client"
    ],
    "declaration": true,
    "outDir": "./dist/types",
    "jsx": "preserve",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}